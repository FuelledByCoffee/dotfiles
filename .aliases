#!/usr/bin/env bash

# Some ls aliases
alias ls='exa -F'
alias la='exa -Fa'
alias ll='exa -FlhH'
alias lt='exa -FT'

if [[ "$OSTYPE" == "linux"* ]]; then
  alias ls='ls -F --color=auto'
fi

# Common commands
alias mv='mv -vi'
alias cp='cp -vi'
alias rm='rm -vI'
alias ln='ln -v'
alias du='du -h'

alias mkdir='mkdir -pv'

# Grep color â€” Seriously though use ripgrep
alias grep='grep   --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

alias vim='nvim'

# make commands
alias clean='make clean'
alias rebuild='make -B'

alias path='echo -e "${PATH//:/\\n}"' # Print one directory in the path variable per line
alias vtop='vtop -t brew'
alias clock='tty-clock -C 4 -Sc'

alias C='cd ~/Code/C'
alias cs50='cd ~/Code/C/cs50'
