# vim:ft=gitconfig
# This is Git's per-user configuration file.
[user]
    name = Johannes Eckhoff
    email = j.eckhoff@gmail.com
    user = FuelledByCoffee
[github]
    user = FuelledByCoffee
[url "https://github.com/FuelledByCoffee/"]
    insteadOf = gh:
[push]
    default = upstream
[diff]
    tool = vimdiff
[difftool]
    prompt = false
[difftool "vimdiff"]
    cmd = nvim -d \"$LOCAL\" \"$REMOTE\"
[merge]
    tool = nvim
    conflictstyle = diff3
[mergetool]
    prompt = false
[mergetool "nvim"]
    cmd = nvim -f -c \"Gdiffsplit!\" \"$MERGED\"
[branch]
    autosetupmerge = true
    autosetuprebase = local
[filter "lfs"]
    required = true
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
[pull]
    rebase = true
[rebase]
    autoStash = true
[commit]
    verbose = true
[help]
    autocorrect = 1
[color]
    ui = auto
    branch = auto
    diff = auto
    status = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[credential]
    helper = osxkeychain
[core]
    pager = bat
    excludesfile = ~/.config/git/ignore
[alias]
    st = status
    co = checkout
    br = branch
    cb = checkout -b
    d  = difftool
    ;reorder  = "!GIT_SEQUENCE_EDITOR \"sed -i -n 'h;1n;2p;g;p'\" git rebase -i HEAD~2"
    discard  = checkout HEAD --
    unstage  = reset HEAD --
    uncommit = reset --soft HEAD~1
    recommit = commit --amend --no-edit
    get  = pull origin main
    yeet = push origin HEAD
[init]
    defaultBranch = main
