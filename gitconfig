# vim: ft=gitconfig
# This is Git's per-user configuration file.
[user]
  name = Johannes Eckhoff
  email = j.eckhoff@gmail.com
  user = FuelledByCoffee
[github]
  user = FuelledByCoffee
[url "ssh://git@github.com/"]
	insteadOf = https://github.com/
[url "git@github.com:"]
  insteadOf = gh:
[url "git@github.com:FuelledByCoffee/"]
  insteadOf = me:
[push]
  default = upstream
[difftool]
  prompt = true
[diff]
  tool = nvimdiff
  ; submodule = log
[difftool "nvimdiff"]
  cmd = nvim -d "'$LOCAL' '$REMOTE'"
[merge]
  tool = nvim
[mergetool]
  prompt = false
[mergetool "nvim"]
  cmd = nvim -f -c '"Gdiffsplit!" "$MERGED"'
[branch]
  autosetupmerge = true
  autosetuprebase = local
[filter "lfs"]
  required = true
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
[pull]
  rebase = true
[rebase]
  autoStash = true
[commit]
  verbose = true
[help]
  autocorrect = 1
[color]
  ui = auto
  branch = auto
  diff = auto
  status = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = green
  changed = yellow
  untracked = cyan
[credential]
  helper = osxkeychain
[core]
  excludesfile = ~/.config/git/ignore
[alias]
  st = status
  co = checkout
  dt = difftool
  br = "!git branch | fzf-tmux --no-preview -d 15"
  ps = "!git push &> /dev/null || (echo \"Fuck! Push failed!\" && echo \"git push initiated from $(pwd) at $(date) threw an error!\") &"
  discard  = checkout HEAD --
  unstage  = reset HEAD --
  untrack  = rm --cached
  uncommit = reset --soft HEAD~1
  recommit = commit --amend --no-edit
  get  = pull origin main
  yeet = push origin HEAD
	delete-remote = "!gh auth refresh -s delete_repo && gh repo delete"
	search-clone = "!git clone --recursive gh:$(gh search repos --owner fuelledbycoffee -L300 | fzf | awk '{print $1}')"
[init]
  defaultBranch = main
