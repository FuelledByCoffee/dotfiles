# This is Git's per-user configuration file.
[user]
    name = Johannes Eckhoff
    email = j.eckhoff@gmail.com
    user = FuelledByCoffee
[filter "lfs"]
    required = true
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
[pull]
	rebase = false
[commit]
    verbose = true
[help]
    autocorrect = 1
[color]
    ui = auto
    branch = auto
    diff = auto
    status = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[credential]
    helper = osxkeychain
[core]
    pager = less
    editor = nvim
    excludesfile = ~/.config/git/ignore
[diff]
    tool = vimdiff
[difftool]
	prompt = false
[difftool "vimdiff"]
	cmd = vimdiff \"$LOCAL\" \"$REMOTE\"
[alias]
    st = status
    co = checkout
    br = branch
    cb = checkout -b
    d  = difftool
    unstage = reset HEAD --
    reorder = "!GIT_SEQUENCE_EDITOR \"sed -i -n 'h;1n;2p;g;p'\" git rebase -i HEAD~2"
    uncommit = reset --soft HEAD~1
    recommit = commit --amend --no-edit
    get = pull origin main
    yeet = push origin HEAD
[init]
    defaultBranch = main
